@model IEnumerable<DotNetCoreCsharpProject.Entities.Levels>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomNiveau)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomNiveau)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNiveau">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdNiveau">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNiveau">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
